#! /bin/bash
set +o errexit

local dest=${!#} #last arg (indirect reference to $#, which is the number of args)

if [ -d $dest ]; then
	echo mv "$@"
	
	for source in "${@:1: $# - 1}"; do #args from 1 to $# - 1
		echo ln --symbolic "$dest/`basename "$source"`" "`dirname "$source"`"
	done
# elif [ - $2 ]; then
# 	mv
# 	pushd
# 	ln -s 
# 	popd
else
	echo last arg must be a directory >&2
	exit 1
fi
