#! /usr/bin/env bash
set +o errexit

if [[ -f $dest ]]; then
	echo last arg must be a directory >&2
	exit 1
fi

mkdir -p "$dest"
mv "$@"

dest=realpath "${!#}" #last arg (indirect reference to $#, which is the number of args)

for source in "${@:1: $# - 1}"; do #args from 1 to $# - 1
	ln --symbolic "$dest/`basename "$source"`" "`dirname "$source"`"
done

# elif [ - $2 ]; then
# 	mv
# 	pushd
# 	ln -s 
# 	popd
