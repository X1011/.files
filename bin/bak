#! /usr/bin/env bash

apt-mark showmanual > ~/.config/package-list.txt

pushd ~/.config/rclone >/dev/null

rc-sync() {
	rclone sync "$1" "drive:bak/linux/debian/$2" --verbose --delete-excluded --copy-links --fast-list --track-renames "${@:3}"
}

(
	rc-sync /etc etc --include-from=etc.include "$@"
	rc-sync ~ \~ --filter-from=./~.filter --filter-from=global.filter "$@"
	rc-sync ~/.config/google-chrome/Default chrome --include-from=chrome.include

#  â†“ redirect stderr, too, because that's where rclone outputs the verbose logs
) |& tee bak.log \
| egrep --invert-match \
  -e ': Saving new token in config file' \
  -e ': Modify window is 1ms' \
  -e "Can't transfer non file/directory" \
#  -e ': Updated modification time in destination' \

popd >/dev/null
